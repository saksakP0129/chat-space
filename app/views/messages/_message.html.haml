.messages--block
  .messages--block__1
    = message.user.name
    .messages--block__1--day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages--block__2
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'messages--block__2__image' if message.image.present?
