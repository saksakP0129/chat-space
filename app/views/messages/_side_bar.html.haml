.side-bar
  .side-bar__header
    .side-bar__header--box
      .side-bar__header--box--text
        = current_user.name  
      .side-bar__header--box--menu
        .side-bar__header--box--menu--icon
          =link_to new_group_path do
            %i.fas.fa-edit
        .side-bar__header--box--menu--icon2
          =link_to edit_user_path(current_user) do
            %i.fas.fa-cog
  .side-bar__group
    .side-bar__group
      - current_user.groups.each do |group|
        .side-bar__group--text
          =link_to group_messages_path(group) do
            .side-bar__group--text--text1
              = group.name
            .side-bar__group--text--text2
              = group.show_last_message